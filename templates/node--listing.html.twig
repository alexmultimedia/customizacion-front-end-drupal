{{ attach_library('octo/owl-carousel') }}

{% set classes = ['post', 'post--listing'] %}

<article{{ attributes.addClass(classes) }}>
  {{ content.field_image }}
  
  <div class="post-date">
    <span class="day">{{ node.createdtime|date('d') }}</span>
    <span class="month">{{ node.createdtime|date('M') }}</span>
  </div>
  
  <div class="post-content">
  
    {{ title_prefix }}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
    {{ title_suffix }}
  
   {#} {{ content.node.teaser }} #}

    {{ node.get('body').summary|striptags }} {# muestra el resumen #}
    <div class="post-meta">
  
      <span class="post-meta-user">
        <i class="fa fa-user"></i> By {{ author_name }}
      </span>
  
      <span class="post-meta-tag">
        <i class="fa fa-tag"></i> {{ content.field_tags }}
      </span> 
  
      <span class="post-meta-comments">
        <i class="fa fa-comments"></i>
        <a href="{{ url }}/#comments">{{ comment_count }}</a>
      </span>
  
      <a href="{{ url }}" class="button button--primary button--xs pull-right">Leer m√°s...</a>
  
    </div>
  
  </div>
  
</article>
